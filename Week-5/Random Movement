float x;
float y;

float step = 3; //percentage increase


void setup(){
  size(750,750);
  noStroke();
  background(255,80,120);
  x = width/2;
  y = height/4;
}

void draw(){
  background(255,80,120);
  fill(200,200,40);
  ellipse(x,y,50,50);
  
  x+= random(-step,step);
  y+= random(-step,step);
  }
