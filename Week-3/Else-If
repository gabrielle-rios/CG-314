void setup() {
  size(700, 700);
  strokeWeight(3);
  stroke(255, 0, 0);
}

void draw() {
  if (mouseX > 480) {
    stroke(0, 255, 0);
  } else if (mouseX > 320) {
    stroke(0, 0, 255);
} else if (mouseX > 200) {
  stroke(255, 0, 255);
} else {
  stroke(0, 255, 255);
}
line(mouseX, mouseY, pmouseX, pmouseY);
}
