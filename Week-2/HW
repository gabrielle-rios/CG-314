int circleWidth;
int circleHeight;

void setup(){
  size(800,800);
  circleWidth = 100;
  circleHeight = 150;
  
  noFill();
  background(0);
  strokeWeight(1);
  stroke(200,0,240);
}

void draw(){
  
  ellipse(width/2,height/2,circleWidth,circleHeight);
  circleWidth = circleWidth + 30;
  circleHeight = circleHeight + 5;
}
